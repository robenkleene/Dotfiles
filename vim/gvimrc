" set guifont=Berkeley\ Mono:h13
" set guifont=Consolas:h14
" This looks slightly more readable on Retina displays
set guifont=SF\ Mono\ Medium:h13
" set guifont=SF\ Mono:h13
set linespace=2

" Disable audible bell
autocmd GUIEnter * set vb t_vb=

" Don't use GUI tabs
set guioptions-=e

" Background & Cursor
" set background=light
" BBEdit Dark
highlight NonText guibg=#141414
highlight Normal guibg=#141414
highlight Cursor guibg=#00BB00
augroup override_colors
  autocmd!
  autocmd ColorScheme * highlight NonText guibg=#141414
  autocmd ColorScheme * highlight Normal guibg=#141414
  autocmd ColorScheme * highlight Cursor guibg=#00BB00
augroup END

" Setting the cursor color has to be after setting the theme
set guicursor=a:blinkon0

" Env
let $MANPATH = expand('~/.brew/share/man') . ':' . expand('~/.man') . ':' . expand('~/.man-local') . ':' . $MANPATH
let $RIPGREP_CONFIG_PATH= expand('~/.ripgreprc')
