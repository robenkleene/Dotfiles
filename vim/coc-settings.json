{
  "suggest.minTriggerInputLength": 3,
  "suggest.noselect": false,
  "solargraph.diagnostics": true,
  "solargraph.checkGemVersion": false,
  "solargraph.promptDownload": false,
  "diagnostic-languageserver.filetypes": {
    "c": ["clang"],
    "css": ["stylelint"],
    "html": ["stylelint", "tidy"],
    "javascript": ["eslint"],
    "markdown": ["markdownlint"],
    "objc": ["clang"],
    "ruby": ["rubocop", "ruby"],
    "scss": ["stylelint"],
    "sh": ["shell", "shellcheck"],
    "swift": ["swiftlint"],
    "vim": ["vint"],
    "xml": ["xmllint"],
    "zsh": ["shell", "shellcheck"]
  },
  "diagnostic-languageserver.formatFiletypes": {
    "fish": "fish_indent",
    "objc": "clang-format",
    "python": "autopep8",
    "sh": "shfmt",
    "swift": "swiftformat",
    "xml": "xmllint"
  },
  "diagnostic-languageserver.formatters": {
    "fish_indent": {
      "command": "fish_indent"
    },
    "clang-format": {
      "command": "clang-format",
      "args": ["-style=file"]
    },
    "autopep8": {
      "command": "autopep8"
    },
    "swiftformat": {
      "command": "swiftformat",
      "args": ["--quiet", "--commas", "inline"]
    },
    "shfmt": {
      "command": "shfmt",
      "args": ["-i", "2", "-ci"]
    },
    "xmllint": {
      "command": "xmllint",
      "args": ["--format", "-"]
    }
  },
  "typescript.suggestionActions.enabled": false,
  "javascript.suggestionActions.enabled": false,
  // Highlight colors (e.g., hex)
  "colors.filetypes": ["*"],
  // Don't highlight current symbol
  "highlight.document.enable": false,
  // Disable the built-in CSS checking which isn't compatible with SCSS
  "css.enable": false,
  "python.analysis.typeCheckingMode": "off",
  "python.linting.pylintUseMinimalCheckers": false,
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,
  "python.pythonPath": "~/.brew/bin/python3",
  "snippets.textmateSnippetsRoots": ["~/.config/Code/User/snippets"],
  "diagnostic.errorSign": "»",
  "diagnostic.warningSign": "»",
  "diagnostic.infoSign": "»",
  "diagnostic.hintSign": "»",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.messageTarget": "echo",
  "snippets.extends": {
    "sh": ["shellscript"],
    "objc": ["objective-c"],
    "zsh": ["sh"],
    "typescript": ["javascript"],
    "make": ["makefile"]
  },
  "git.enableGutters": true
}
