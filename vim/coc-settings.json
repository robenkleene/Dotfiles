{
  "suggest.noselect": false,
  "solargraph.diagnostics": true,
  "solargraph.checkGemVersion": false,
  "diagnostic-languageserver.filetypes": {
    "c": ["clang"],
    "css": ["stylelint"],
    "html": ["stylelint", "tidy"],
    "javascript": ["eslint"],
    "markdown": ["markdownlint"],
    "objc": ["clang"],
    "ruby": ["rubocop", "ruby"],
    "scss": ["stylelint"],
    "sh": ["shell", "shellcheck"],
    "swift": ["swiftlint"],
    "vim": "vint",
    "xml": ["xmllint"],
    "zsh": ["shell", "shellcheck"]
  },
  "snippets.extends": {
    "make": ["makefile"]
  },
  "snippets.textmateSnippetsRoots": ["~/.config/Code/User/snippets"]
}
