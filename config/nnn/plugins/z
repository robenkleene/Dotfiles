#!/usr/bin/env sh

# shellcheck disable=SC1090,SC1091
. "$(dirname "$0")"/.nnn-plugin-helper

# Must be after plugin helper
# + for next
# CTX=+
# current context
export CUR_CTX=1

echo
printf "z: "
IFS= read -r line
result="$(~/.bin/z_get ${line})"

if [ ! -d "$result" ]; then
  exit 0
fi

nnn_cd "$result" "$CTX"
