{
    // Don't prompt for trust every time a workspace is opened
    "security.workspace.trust.enabled": false,
    // Don't show a welcome page on startup
    // `"newUntitledFile"` Start with an untitled file
    // `"none"`: Start with nothing
    "workbench.startupEditor": "newUntitledFile",
    // Don't ask for confirmation every drag and drop in Explorer
    "explorer.confirmDragAndDrop": false,
    // Automatically open a parent git repository when opening a subfolder
    // (By default this prompts)
    "git.openRepositoryInParentFolders": "always",
    // Fix option keys (e.g., to move by word) in the integrated terminal
    "terminal.integrated.macOptionIsMeta": true,
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.tabCompletion": "onlySnippets",
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        }
    },
    // Copy as plain text
    "editor.copyWithSyntaxHighlighting": false,
    "files.defaultLanguage": "markdown",
    // Disable prompt for opening files via URL
    "security.promptForLocalFileProtocolHandling": false,
    // Touched by `CodeLLDB`
    "lldb.library": "/Applications/Xcode.app/Contents/SharedFrameworks/LLDB.framework/Versions/A/LLDB",
    "lldb.launch.expressions": "native",
    // Disable hints in the editor, e.g., `ask GitHub Copilot`
    "workbench.editor.empty.hint": "hidden",
    // Disable hints in the terminal, e.g., `ask GitHub Copilot`
    "terminal.integrated.initialHint": false,
    // Don't show `GitHub Copilot` autocompletion suggestions
    "github.copilot.editor.enableAutoCompletions": false,
    "update.showReleaseNotes": false,
    // Don't re-open windows when opening VS Code
    // Unfortunately, open files in a Workspace will still be opened when a
    // Workspace is re-opened and that cannot be turned off
    // Adding this back, it's useful when language servers aren't working to
    // quickly restore everything
    // "window.restoreWindows": "none",
    // Disable extension recommendations popup
    // Recommendations can still be seen with the `Extensions: Show Recommended
    // Extensions` command
    "workbench.remoteIndicator.showExtensionRecommendations": false,
    "editor.fontSize": 14,
    "editor.fontFamily": "Consolas, Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.fontSize": 14
}
