[color]
	ui = auto
[core]
	excludesfile = ~/.gitignore
	editor = vim -c "SessionNoAuto"
[push]
	default = simple
[merge]
	tool = vimdiff
	conflictstyle = diff3
[alias]
	a = add
	aa = add -A :/
	b = branch
	bd = branch -d
	c = commit
	cl = clone
	co = checkout
	cob = checkout -b
	d = diff
	dt = difftool
	dw = diff --color-words
	f = fetch
	l = log
	m = merge
	mt = mergetool
	p = push
	pt = push --tags
	r = rebase
	rc = rebase --continue
	s = status
	sm = submodule
	smi = submodule init
	smu = submodule update
	smuir = submodule update --init -recursive
	t = tag
	u = pull
	wstats = difftool -t wstats
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[include]
	path = .gitconfig_local
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[pull]
	ff = only
[difftool]
	prompt = false
[difftool "wstats"]
	cmd = wdiff --statistics \"$LOCAL\" \"$REMOTE\" | tail -2
