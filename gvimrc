" Disable Cursor blinking
set gcr=a:blinkon0

" Disable Toolbar
set guioptions-=T

" Set font
set guifont=Menlo\ Regular:h13

" Screen Rows & Columns
set lines=48
set columns=80

" Remove Scroll bars
set guioptions-=r

" Solarized
syntax enable
" set background=dark
set background=light
colorscheme solarized
