# top-most EditorConfig file
root = true

[*.coffee]
indent_style = space
indent_size = 2

[{*.rb,*.gemspec,Fastfile}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
# Use 4 spaces for JSON because that's what `python -m json.tool` uses
indent_size = 4

[*.{js,ts}]
indent_style = space
indent_size = 2

[*.{jade,pug}]
indent_style = space
indent_size = 2

[*.{scss,css}]
indent_style = space
indent_size = 2

[{*.vim,vimrc}]
indent_style = space
indent_size = 2

[{*.zsh,zshenv,zshrc}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2

[*.swift]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 2

# Note we don't specify `.h` for Objective-C because that would conflict with
# C++ header files which use the same extension
# Objective-C header files tend to be flat, so this isn't much of a problem
[*.{mm,m}]
